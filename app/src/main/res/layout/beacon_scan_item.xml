<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UUID: "
            android:textColor="#2770b9" />

        <TextView
            android:id="@+id/drawer_item_uuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2AA0b9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Major: "
            android:textColor="#2770b9" />

        <TextView
            android:id="@+id/drawer_item_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2AA0b9" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Minor: "
            android:textColor="#2770b9" />

        <TextView
            android:id="@+id/drawer_item_minor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2AA0b9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mac address: "
            android:textColor="#2770b9" />

        <TextView
            android:id="@+id/drawer_item_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2AA0b9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: "
            android:textColor="#2770b9" />

        <TextView
            android:id="@+id/drawer_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2AA0b9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" RSSI: "
            android:textColor="#2770b9" />

        <TextView
            android:id="@+id/drawer_item_rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2AA0b9" />
    </LinearLayout>
</LinearLayout>